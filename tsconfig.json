{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2016",
      "dom.iterable",
      "es2015.iterable",
      "esnext",
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "node",
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "**/*.mjs",
    "**/*.js",
    "**/*.jsx",
    "**/*.json",
  ],
  "exclude": [
    "node_modules",
  ],
}
